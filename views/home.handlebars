<div class="mx-auto container p-4">
  {{#if forkLength}}
    <div class="bg-red-500 w-full rounded mt-12 p-4 text-white font-bold">
      Currently {{forkLength}} competing chains
    </div>
    <h2 class="text-lg mt-4 font-bold">Competing Chains</h2>
    {{#each forks}}
      <div class="bg-gray-200 w-full rounded mt-4 p-4">
        Current Length (from fork): {{this.forkLength}} <br />
        <br />
        <strong>Latest Block:</strong><br />
        Height: {{this.forkEnd.height}} <br />
        Keyhash: {{this.forkEnd.keyHash}} <br />
        Timestamp: {{this.forkEnd.timestamp}}
        <br />
        <strong>First Block in Fork:</strong><br />
        Height: {{this.forkStart.height}} <br />
        Keyhash: {{this.forkStart.keyHash}} <br />
        Timestamp: {{this.forkStart.timestamp}}
        <br />
        Forked At: {{this.forkStart.lastKeyHash}}
      </div>
    {{/each}}
  {{else}}
    <div class="bg-green-500 w-full rounded mt-12 p-4 text-white font-bold">
      No forks detected
    </div>
    {{#each newestBlocks}}
      <div class="bg-gray-200 w-full rounded mt-4 p-4">
        Current Height: {{this.height}} <br />
        Latest Keyhash: {{this.keyHash}} <br />
        Timestamp: {{this.timestamp}}
      </div>
    {{/each}}
  {{/if}}

</div>
